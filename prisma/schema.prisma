// schema.prisma

generator client {
  provider = "prisma-client-js"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
}
model Client {
  id        String   @id @default(cuid())
  name      String
  techNotes Json?
  orders    Order[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PlateType {
  id                  String   @id @default(cuid())
  format              String
  manufacturer        String
  otherParams         Json?
  minStockThreshold   Int      @default(0)
  movements           PlateMovement[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Order {
  id            String   @id @default(cuid())
  clientId      String
  client        Client   @relation(fields: [clientId], references: [id], onDelete: Restrict, onUpdate: Cascade)
  colorMode     ColorMode
  status        OrderStatus @default(NEW)
  notesSnapshot Json?
  plateMovements PlateMovement[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PlateMovement {
  id             String        @id @default(cuid())
  plateTypeId    String
  plateType      PlateType     @relation(fields: [plateTypeId], references: [id], onDelete: Restrict, onUpdate: Cascade)
  quantity       Int
  movementType   MovementType
  reason         MovementReason
  responsibility Responsibility?
  orderId        String?
  order          Order?         @relation(fields: [orderId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  createdAt DateTime @default(now())
  @@index([plateTypeId])
  @@index([orderId])
}

enum ColorMode {
  CMYK
  BLACK
  MULTICOLOR
}

enum OrderStatus {
  NEW
  PROCESS
  DONE
}

enum MovementType {
  INCOMING
  OUTGOING
}

enum MovementReason {
  PURCHASE
  RETURN
  CORRECTION
  NORMAL_USAGE
  SCRAP_CLIENT
  SCRAP_PRODUCTION
  SCRAP_MATERIAL
  LOSS_TEST
  LOSS_CALIBRATION
  LOSS_EQUIPMENT
}

enum Responsibility {
  CLIENT
  PRODUCTION
  MATERIALS
}

model EventLog {
  id          String   @id @default(cuid())
  eventType   String
  context     String
  payload     Json
  timestamp   DateTime @default(now())

  @@index([timestamp])
}